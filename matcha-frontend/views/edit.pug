                  label(for="img-5" class="cl-white") image-5
                  input(type="file" class="form-control-file cl-white" id="img-5" name="n-img-5")
                div(class="col-md-6 mb-3")
                  label(for="gender" class="cl-white") Gender
                  select(name="gender" id="gender" class="form-control")
                    option(value="0") Male
                    option(value="1") Female
                    option(value="2") Bisexual

              button(class="btn btn-secondary btn-lg btn-block" type="submit") Change Info

