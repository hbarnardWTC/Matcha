        main(role="main")
          div(class="center-text log-flex container")
            form(class="edit-form-signup")
              h1(class="h3 mb-3 font-weight-normal text-center cl-white") Profile Editing
              div(class="row")
                div(class="col-md-6 mb-3")
                  label(for="name" class="cl-white") Name
                  input(type="text" class="form-control" id="name" placeholder="Liam" required)
                div(class="col-md-6 mb-3")
                  label(for="surname" class="cl-white") Surname
                  input(type="text" class="form-control" id="surname" placeholder="Du Preeeeeeeeeeeeeeeeeeeeee" required)
              div(class="row")
                div(class="col-md-6 mb-3")
                  label(for="username" class="cl-white") Username
                  input(type="text" class="form-control" id="username" placeholder="I like rias's tits" required)
                div(class="col-md-6 mb-3")
                  label(for="email" class="cl-white") Email
                  input(type="text" class="form-control" id="email" placeholder="EndlessHorizon@gmail.co.za" required)
              div(class="row")
                div(class="col-md-6 mb-3")
                  label(for="password" class="cl-white") Password
                  input(type="text" class="form-control" id="password" placeholder="Name that bish" required)
                div(class="col-md-6 mb-3")
                  label(for="pwconfirm" class="cl-white") Password Confirmation
                  input(type="text" class="form-control" id="pwconfirm" onchange="verifyPass()" placeholder="Say that again bish" required)
              div(class="row")
                div(class="col-md-6 mb-3")
                  label(for="address" class="cl-white") Address
                  input(type="text" class="form-control" id="address" placeholder="1 Endless Horizon Avenue" required)
                div(class="col-md-6 mb-3")
                  label(for="sp" class="cl-white go-away") Sexual Preference
                  select(name="sp" id="sp" class="form-control")
                    option(value="0") Male
                    option(value="1") Female
                    option(value="2") Bisexual
              div(class="row")
                div(class="col-md-6 mb-3")
                  label(for="interest" class="cl-white") Interests
                  input(type="text" class="form-control" id="interest" placeholder="anime, gaming, socailly awkward" required)
                div(class="col-md-6 mb-3")
                  label(for="bio" class="cl-white") Bio
                  input(type="text" class="form-control" id="bio" placeholder="Just nonsense" required)
              div(class="row")
                div(class="col-md-6 mb-3")
                  label(for="img-1" class="cl-white") image-1
                  input(type="file" class="form-control-file cl-white" id="img-1" name="n-img-1")
                div(class="col-md-6 mb-3")
                  label(for="img-2" class="cl-white") image-2
                  input(type="file" class="form-control-file cl-white" id="img-2" name="n-img-2")
              div(class="row")
                div(class="col-md-6 mb-3")
                  label(for="img-3" class="cl-white") image-3
                  input(type="file" class="form-control-file cl-white" id="img-3" name="n-img-3")
                div(class="col-md-6 mb-3")
