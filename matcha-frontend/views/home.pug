        main(role="main")
          div(id="carouselExampleIndicators" class="carousel slide drop-panties" data-ride="carousel")
            ol(class="carousel-indicators")
              li(data-target="#carouselExampleIndicators" data-slide-to="0" class="active")
              li(data-target="#carouselExampleIndicators" data-slide-to="1")
              li(data-target="#carouselExampleIndicators" data-slide-to="2")
              li(data-target="#carouselExampleIndicators" data-slide-to="3")
              li(data-target="#carouselExampleIndicators" data-slide-to="4")
            div(class="carousel-inner")
              div(class="carousel-item active")
                 img(class="d-block profile-image" id="img1" src="https://i.pinimg.com/736x/5a/e2/a5/5ae2a545eb7bd167984c1dfc792e2776.jpg" alt="First slide")
              div(class="carousel-item")
                 img(class="d-block profile-image" id="img2" src="https://www.pngitem.com/pimgs/m/78-782739_stickers-kawaii-anime-gatitos-cute-anime-girls-neko.png" alt="Second slide")
              div(class="carousel-item")
                 img(class="d-block profile-image" id="img3" src="https://cdn140.picsart.com/309894446213201.jpg?type=webp&to=min&r=640" alt="Third slide")
              div(class="carousel-item")
                 img(class="d-block profile-image" id="img4" src="https://cdn140.picsart.com/309894446213201.jpg?type=webp&to=min&r=640" alt="Fourth slide")
              div(class="carousel-item")
                 img(class="d-block profile-image" id="img5" src="https://cdn140.picsart.com/309894446213201.jpg?type=webp&to=min&r=640" alt="Fith slide")
            a(class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev")
              span(class="carousel-control-prev-icon" aria-hidden="true")
              span(class="sr-only") Previous
            a(class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next")
              span(class="carousel-control-next-icon" aria-hidden="true")
              span(class="sr-only") Next
          div(class="container text-center" id="profileDetails")
            div(class="cl-white margin-zero drop-panties" id="btnsDiv")
              button(type="button" id="likeBtn" class="btn btn-primary")
                i(class="fa fa-heart")
              button(type="button" id="fame" class="btn btn-warning") 0
              button(type="button" id="dislikeBtn" class="btn btn-light" onclick="updateUser()")
                i(class="fa fa-thumbs-down")
              button(type="button" id="blockBtn" class="btn btn-danger")
                i(class="fa fa-ban")
            p(class="cl-white margin-zero" id="personName") Name:
            p(class="cl-white margin-zero" id="personSurname") Surname:
            p(class="cl-white margin-zero" id="personAge") Age:
            p(class="cl-white margin-zero" id="personDistance") Distance:
